	"{{lower black.hex }}",
	"{{lower red.hex }}",
	"{{lower green.hex }}",
	"{{lower yellow.hex }}",
	"{{lower blue.hex }}",
	"{{lower magenta.hex }}",
	"{{lower cyan.hex }}",
	"{{lower white.hex }}",

	/* 8 bright colors */
	"{{lower bright_black.hex }}",
	"{{lower bright_red.hex }}",
	"{{lower bright_green.hex }}",
	"{{lower bright_yellow.hex }}",
	"{{lower bright_blue.hex }}",
	"{{lower bright_magenta.hex }}",
