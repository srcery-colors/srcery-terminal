# https://github.com/srcery-colors/srcery-terminal/

# Colors (Srcery)
colors:
  # Default colors
  primary:
    background: '{{lowerCase primary.black.hex }}'
    foreground: '{{lowerCase primary.bright_white.hex }}'

  # Cursor colors
  cursor:
    text: CellBackground
    cursor: '{{lowerCase primary.yellow.hex }}'

  # Normal colors
  normal:
    black:   '{{lowerCase primary.black.hex }}'
    red:     '{{lowerCase primary.red.hex }}'
    green:   '{{lowerCase primary.green.hex }}'
    yellow:  '{{lowerCase primary.yellow.hex }}'
    blue:    '{{lowerCase primary.blue.hex }}'
    magenta: '{{lowerCase primary.magenta.hex }}'
    cyan:    '{{lowerCase primary.cyan.hex }}'
    white:   '{{lowerCase primary.white.hex }}'

  # Bright colors
  bright:
    black:   '{{lowerCase primary.bright_black.hex }}'
    red:     '{{lowerCase primary.bright_red.hex }}'
    green:   '{{lowerCase primary.bright_green.hex }}'
    yellow:  '{{lowerCase primary.bright_yellow.hex }}'
    blue:    '{{lowerCase primary.bright_blue.hex }}'
    magenta: '{{lowerCase primary.bright_magenta.hex }}'
    cyan:    '{{lowerCase primary.bright_cyan.hex }}'
    white:   '{{lowerCase primary.bright_white.hex }}'
