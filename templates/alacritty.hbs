# https://github.com/srcery-colors/srcery-terminal/

# Colors (Srcery)
colors:
  # Default colors
  primary:
    background: '{{ primary.black.hex }}'
    foreground: '{{ primary.brightwhite.hex }}'

  # Cursor colors
  cursor:
    text: CellBackground
    cursor: '{{ primary.yellow.hex }}'

  # Normal colors
  normal:
    black:   '{{ primary.black.hex }}'
    red:     '{{ primary.red.hex }}'
    green:   '{{ primary.green.hex }}'
    yellow:  '{{ primary.yellow.hex }}'
    blue:    '{{ primary.blue.hex }}'
    magenta: '{{ primary.magenta.hex }}'
    cyan:    '{{ primary.cyan.hex }}'
    white:   '{{ primary.white.hex }}'

  # Bright colors
  bright:
    black:   '{{ primary.bright_black.hex }}'
    red:     '{{ primary.bright_red.hex }}'
    green:   '{{ primary.bright_green.hex }}
    yellow:  '{{ primary.bright_yellow.hex }}'
    blue:    '{{ primary.bright_blue.hex }}'
    magenta: '{{ primary.bright_magenta.hex }}'
    cyan:    '{{ primary.bright_cyan.hex }}'
    white:   '{{ primary.bright_white.hex }}'
