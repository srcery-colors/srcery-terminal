# https://github.com/srcery-colors/srcery-terminal/

# Colors (Srcery)
colors:
  # Default colors
  primary:
    background: '{{lower primary.black.hex }}'
    foreground: '{{lower primary.bright_white.hex }}'

  # Cursor colors
  cursor:
    text: CellBackground
    cursor: '{{lower primary.yellow.hex }}'

  # Normal colors
  normal:
    black:   '{{lower primary.black.hex }}'
    red:     '{{lower primary.red.hex }}'
    green:   '{{lower primary.green.hex }}'
    yellow:  '{{lower primary.yellow.hex }}'
    blue:    '{{lower primary.blue.hex }}'
    magenta: '{{lower primary.magenta.hex }}'
    cyan:    '{{lower primary.cyan.hex }}'
    white:   '{{lower primary.white.hex }}'

  # Bright colors
  bright:
    black:   '{{lower primary.bright_black.hex }}'
    red:     '{{lower primary.bright_red.hex }}'
    green:   '{{lower primary.bright_green.hex }}'
    yellow:  '{{lower primary.bright_yellow.hex }}'
    blue:    '{{lower primary.bright_blue.hex }}'
    magenta: '{{lower primary.bright_magenta.hex }}'
    cyan:    '{{lower primary.bright_cyan.hex }}'
    white:   '{{lower primary.bright_white.hex }}'
